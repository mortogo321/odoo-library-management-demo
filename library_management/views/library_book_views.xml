<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Book Tree View -->
    <record id="view_library_book_tree" model="ir.ui.view">
        <field name="name">library.book.tree</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <tree string="Books" decoration-success="state=='available'" decoration-danger="state=='borrowed'">
                <field name="name"/>
                <field name="author"/>
                <field name="isbn"/>
                <field name="category"/>
                <field name="state"/>
                <field name="current_borrower_id"/>
            </tree>
        </field>
    </record>

    <!-- Book Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book">
                <header>
                    <button name="action_set_available" string="Set Available" type="object"
                            class="btn-primary" invisible="state == 'available'"/>
                    <button name="action_set_maintenance" string="Set Maintenance" type="object"
                            class="btn-warning" invisible="state == 'maintenance'"/>
                    <field name="state" widget="statusbar" statusbar_visible="available,borrowed"/>
                </header>
                <sheet>
                    <field name="cover_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Book Title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="author"/>
                            <field name="isbn"/>
                            <field name="category"/>
                            <field name="publisher"/>
                        </group>
                        <group>
                            <field name="published_date"/>
                            <field name="pages"/>
                            <field name="current_borrower_id" readonly="1"/>
                            <field name="active"/>
                        </group>
                        <group string="QR Code">
                            <field name="qr_code" widget="image" options="{'size': [150, 150]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Book description..."/>
                        </page>
                        <page string="Borrowing History">
                            <field name="borrowing_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="member_id"/>
                                    <field name="borrow_date"/>
                                    <field name="due_date"/>
                                    <field name="return_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Book Search View -->
    <record id="view_library_book_search" model="ir.ui.view">
        <field name="name">library.book.search</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <search string="Search Books">
                <field name="name"/>
                <field name="author"/>
                <field name="isbn"/>
                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Borrowed" name="borrowed" domain="[('state', '=', 'borrowed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="category" context="{'group_by': 'category'}"/>
                    <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Book Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first book!
            </p>
            <p>
                Add books to your library catalog and manage their availability.
            </p>
        </field>
    </record>
</odoo>
