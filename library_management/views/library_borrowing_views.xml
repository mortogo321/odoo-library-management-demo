<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Borrowing Tree View -->
    <record id="view_library_borrowing_tree" model="ir.ui.view">
        <field name="name">library.borrowing.tree</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <tree string="Borrowings" decoration-danger="state=='overdue'" decoration-muted="state=='returned'">
                <field name="name"/>
                <field name="book_id"/>
                <field name="member_id"/>
                <field name="borrow_date"/>
                <field name="due_date"/>
                <field name="return_date"/>
                <field name="days_borrowed"/>
                <field name="days_overdue"/>
                <field name="fine_amount"/>
                <field name="fine_paid"/>
                <field name="state"/>
                <field name="is_overdue" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Borrowing Form View -->
    <record id="view_library_borrowing_form" model="ir.ui.view">
        <field name="name">library.borrowing.form</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <form string="Borrowing">
                <header>
                    <button name="action_return_book" string="Return Book" type="object"
                            class="btn-primary" invisible="state != 'borrowed'"/>
                    <button name="action_mark_overdue" string="Mark Overdue" type="object"
                            class="btn-warning" invisible="state != 'borrowed'"/>
                    <button name="action_pay_fine" string="Pay Fine" type="object"
                            class="btn-success" invisible="fine_amount == 0 or fine_paid"/>
                    <field name="state" widget="statusbar" statusbar_visible="borrowed,returned"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" icon="fa-warning" invisible="days_overdue == 0">
                            <field name="days_overdue" widget="statinfo" string="Days Overdue"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="book_id" options="{'no_create': True}"/>
                            <field name="member_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="borrow_date"/>
                            <field name="due_date"/>
                            <field name="return_date" readonly="1"/>
                            <field name="days_borrowed"/>
                            <field name="is_overdue" invisible="1"/>
                        </group>
                    </group>
                    <group string="Fine/Penalty Information" invisible="fine_amount == 0">
                        <group>
                            <field name="fine_per_day"/>
                            <field name="fine_amount" widget="monetary" options="{'currency_field': 'False'}"/>
                        </group>
                        <group>
                            <field name="fine_paid"/>
                            <field name="fine_payment_date" invisible="not fine_paid"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Additional notes..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Borrowing Search View -->
    <record id="view_library_borrowing_search" model="ir.ui.view">
        <field name="name">library.borrowing.search</field>
        <field name="model">library.borrowing</field>
        <field name="arch" type="xml">
            <search string="Search Borrowings">
                <field name="name"/>
                <field name="book_id"/>
                <field name="member_id"/>
                <filter string="Borrowed" name="borrowed" domain="[('state', '=', 'borrowed')]"/>
                <filter string="Overdue" name="overdue" domain="[('state', '=', 'overdue')]"/>
                <filter string="Returned" name="returned" domain="[('state', '=', 'returned')]"/>
                <group expand="0" string="Group By">
                    <filter string="Member" name="member" context="{'group_by': 'member_id'}"/>
                    <filter string="Book" name="book" context="{'group_by': 'book_id'}"/>
                    <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                    <filter string="Borrow Date" name="borrow_date" context="{'group_by': 'borrow_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Borrowing Action -->
    <record id="action_library_borrowing" model="ir.actions.act_window">
        <field name="name">Borrowings</field>
        <field name="res_model">library.borrowing</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first borrowing record!
            </p>
            <p>
                Track book borrowings and returns with ease.
            </p>
        </field>
    </record>
</odoo>
