<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Member Tree View -->
    <record id="view_library_member_tree" model="ir.ui.view">
        <field name="name">library.member.tree</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <tree string="Members">
                <field name="member_number"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="member_type"/>
                <field name="join_date"/>
                <field name="borrowed_books_count"/>
            </tree>
        </field>
    </record>

    <!-- Member Form View -->
    <record id="view_library_member_form" model="ir.ui.view">
        <field name="name">library.member.form</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <form string="Member">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_borrowings" type="object"
                                class="oe_stat_button" icon="fa-book">
                            <field name="borrowed_books_count" widget="statinfo"
                                   string="Borrowed Books"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Member Name"/>
                        </h1>
                        <h3>
                            <field name="member_number" readonly="1"/>
                        </h3>
                    </div>
                    <group>
                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="member_type"/>
                        </group>
                        <group>
                            <field name="join_date"/>
                            <field name="birth_date"/>
                            <field name="active"/>
                        </group>
                        <group string="Member Card QR Code">
                            <field name="qr_code" widget="image" options="{'size': [150, 150]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="address" placeholder="Full address..."/>
                    </group>
                    <notebook>
                        <page string="Borrowing History">
                            <field name="borrowing_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="book_id"/>
                                    <field name="borrow_date"/>
                                    <field name="due_date"/>
                                    <field name="return_date"/>
                                    <field name="state" decoration-danger="state=='overdue'"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Member Search View -->
    <record id="view_library_member_search" model="ir.ui.view">
        <field name="name">library.member.search</field>
        <field name="model">library.member</field>
        <field name="arch" type="xml">
            <search string="Search Members">
                <field name="name"/>
                <field name="member_number"/>
                <field name="email"/>
                <filter string="Students" name="students" domain="[('member_type', '=', 'student')]"/>
                <filter string="Teachers" name="teachers" domain="[('member_type', '=', 'teacher')]"/>
                <filter string="Public" name="public" domain="[('member_type', '=', 'public')]"/>
                <group expand="0" string="Group By">
                    <filter string="Member Type" name="member_type" context="{'group_by': 'member_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Member Action -->
    <record id="action_library_member" model="ir.actions.act_window">
        <field name="name">Members</field>
        <field name="res_model">library.member</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register your first library member!
            </p>
            <p>
                Add members to track who can borrow books from the library.
            </p>
        </field>
    </record>
</odoo>
